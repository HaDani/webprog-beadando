{% extends 'layout' %}

{% block content %}

    <h2>
        Komment hozzáadása
    </h2>

    {% if old('errors') %}
        
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
  </div>
</div>
    {% endif %}

    <form class="form-horizontal" action="" method="POST">
        {{ csrfField }}
    <div class="form-group">
      <label for="text" class="col-lg-2 control-label">Megjegyzés:</label>
      <div class="col-lg-10">
        <textarea type="text" class="form-control" id="text" name="text" placeholder="Komment" value="{{ old('text') }}"></textarea>
        <span class="help-block">Ez a mező nem lehet üres</span>
      </div>
    </div>

    <br>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Mégse</button>
        <button type="submit" class="btn btn-primary">Elküld</button>
      </div>
    </div>
</form>
{% endblock %}